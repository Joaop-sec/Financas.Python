add_poupanca = -1
add_valor_poupanca_ensal = 0 
while add_poupanca < 0:
    try:
        add_poupanca_resposta = input("Consegue poupar algum valor mensalmente? (sim/não): ").strip().lower()
        if add_poupanca_resposta == "não" or add_poupanca_resposta == "nao":
            print("Certo! Mas lembre que é sempre bom poupar algo todo mês")
            print("✅ Nenhum valor é polpado mensalmente")
            add_valor_poupado_mensal = 0
            add_valor_poupado_mensal = 1

        elif add_poupanca_resposta == "sim": 
                add_valor_poupado_mensal = float(input("Qual é o valor que é poupado mensalmente? R$"))
                
                print(f"O valor adicionado mensalmente é {add_valor_poupado_mensal:.2f}")
        add_poupanca = 1

    except ValueError:
         print("Por favor digite apenas núeros)")
         add_poupanca = -1