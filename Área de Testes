renda_mes = -1 
while renda_mes <= 0:
    try: 
        renda_mes = float(input("Digite sua renda mensal total (em R$): R$"))

        if renda_mes < 0:
            print("❌ Por favor, digite um valor válido para a renda mensal: R$")
            renda_mes = -1
        elif renda_mes == 0:
            alterar_renda_mes = input("Você digitou 0,0 isso está certo? (sim/alterar)").strip().lower()
            if alterar_renda_mes == "alterar":
                renda_mes = -1
            elif alterar_renda_mes == "Sim":
                break
            else:              
                print("Digite apenas sim ou alterar")
                renda_mes = -1
        else:
            break
    except ValueError:
         print("❌ Por favor, digite apenas números")
         renda_mes = -1

print(f"A renda mês é {renda_mes}")

